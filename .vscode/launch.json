    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}"
        },
        {
            "name": "aider_tool",
            "type": "debugpy",
            "request": "launch",
            "program": "aider_tool/main.py",
            "console": "integratedTerminal",
            "args": "aider_tool/bad.py"
        }
    ]
}